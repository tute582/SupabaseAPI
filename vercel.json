{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/$1"

}],
  "$schema": "https://supabase-api-six.vercel.app/vercel.json",
    "crons":  [
        {
          "path": "/check-reminders",
          "schedule": "*/1 * * * *"
        }
      ]
    
}
